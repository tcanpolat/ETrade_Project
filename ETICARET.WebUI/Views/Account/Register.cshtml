@model RegisterModel
@{
    ViewData["Title"] = "Login";
}

@section Scripts {
    <script src="~/modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="text-center">
    <h1>Register</h1>
    <h4>Register User</h4>
    <div class="row d-flex justify-content-center">
        <div class="col-md-3 validation-box">
            <div asp-validation-summary="ModelOnly" class="text-danger validation"></div>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-3">
            <form asp-action="Register" asp-controller="Account">
                @Html.AntiForgeryToken()
                <div class="form-group mb-2">
                    <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="UserName" class="form-control" placeholder="Username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="RePassword" class="form-control" placeholder="RePassword" />
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Register User" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
